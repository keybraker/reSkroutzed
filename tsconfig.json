{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "removeComments": true,
    "importsNotUsedAsValues": "remove",
    "noEmitOnError": true,
    "isolatedModules": true
  },
  "include": [
    "src",
    "popup",
    "test",
    "*.ts"
  ]
}