{
    "name": "reSkroutzed",
    "description": "Enhances Skroutz.gr by flagging sponsored products, price checker, and providing a dark mode toggle",
    "version": "1.9.0",
    "manifest_version": 3,
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "*://www.skroutz.gr/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://www.skroutz.gr/*",
                "https://m.skroutz.gr/*"
            ],
            "css": [
                "css/flaggerToggle.css",
                "css/productFlags.css",
                "css/shelfFlags.css",
                "css/style.css",
                "css/videoFlags.css",
                "css/darkModeToggle.css",
                "css/universalToggle.css"
            ],
            "js": [
                "background.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icons/48.png"
            ],
            "matches": [
                "https://www.skroutz.gr/*",
                "https://m.skroutz.gr/*"
            ]
        }
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "48": "/icons/48.png",
            "128": "/icons/128.png"
        }
    },
    "icons": {
        "48": "/icons/48.png",
        "128": "/icons/128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "skroutz-sponsored-flagger@itsiakkas.com",
            "strict_min_version": "109.0"
        },
        "gecko_android": {
            "strict_min_version": "113.0"
        }
    }
}